
<div class="container">
  <h1 style="text-align: center;">ADD GAME</h1>
  <form action="/admin/add-game" method="POST" enctype="multipart/form-data">
    <div class="form-group">
      <label for="exampleInputEmail1">Name Game</label>
      <input name="name" type="text" class="form-control" id="files" aria-describedby="emailHelp"
        placeholder="Enter email">
    </div>
    <div class="form-group">
      <label  for="exampleFormControlFile1">Image Game Small</label>
      <input id="imgSmall" name="imgSmall" type="file" class="form-control-file" >
      <img id="Small" />
    </div>
    <div class="form-group">
      <label for="exampleFormControlFile1">Image Game Big</label>
      <input id="imgBig" name="imgBig" type="file" class="form-control-file" >
      <img id="Big" />
    </div>
    <div class="form-group">
      <label for="exampleFormControlTextarea1">Content Game</label>
      <textarea name="content" class="form-control" id="exampleFormControlTextarea1" rows="3"></textarea>
    </div>
    <div class="form-group">
      <label for="exampleFormControlTextarea1">Description Game</label>
      <textarea name="desc" class="form-control" id="exampleFormControlTextarea1" rows="3"></textarea>
    </div>

    <div class="form-check mb-2" >
      <select class="form-select" aria-label="Default select example" id="frmSelect">
        <option value="0" selected>Select imgage feature</option>
        <option value="1">imgage big feature</option>
        <option value="2">imgage small feature</option>
        <option value="3">imgage small feature</option>
      </select>
    </div>
    <button class="btn btn-primary btn-user btn-block" type="submit" class="btn btn-primary">Register</button>
  </form>
  
</div>

<script>
  const stateMsg = JSON.parse('<%- JSON.stringify(error) %>');
  let error = (stateMsg) ? stateMsg : '';

  if(error) {
      Toastify({
      text: error,
      duration: 1500,
      newWindow: true,
      close: true,
      gravity: "bottom", // `top` or `bottom`
      position: "right", // `left`, `center` or `right`
      stopOnFocus: true, // Prevents dismissing of toast on hover
      style: {
          background: "pink",
      },
      onClick: function () { } // Callback after click
  }).showToast();
  }
</script>