<div class="container">
  <h1 style="text-align: center;">ADD GAME</h1>
  <form action="/admin/update-game" method="POST" enctype="multipart/form-data">
    <div class="form-group">
      <label for="exampleInputEmail1">Name Game</label>
      <input type="hidden" name="id" value="<%=data._id %>" id="">
      <input value="<%=data.name %>" name="name" type="text" class="form-control" id="files"
        aria-describedby="emailHelp" placeholder="Enter email">
    </div>
    <div class="form-group">
      <label for="exampleFormControlFile1">Image Game Small</label>
      <input type="hidden" name="imgSmall1" value="<%=data.imgSmall %>" id="">
      <input  name="imgSmall" type="file" class="form-control-file"  id="imgSmall">
      <img id="Small" src="<%=data.imgSmall %>" class="imgSmall"/>
    </div>
    <div class="form-group">
      <label for="exampleFormControlFile1">Image Game Big</label>
      <input type="hidden" name="imgBig1" value="<%=data.imgBig %>" id="">
      <input  name="imgBig" type="file" class="form-control-file"  id="imgBig">
      <img id="Big" src="<%=data.imgBig %>"  class="imgBig"/>
    </div>
    <div class="form-group">
      <label for="exampleFormControlTextarea1">Content Game</label>
      <textarea name="content" class="form-control" id="exampleFormControlTextarea1" rows="3">
                <%=data.content %>
            </textarea>
    </div>
    <div class="form-group">
      <label for="exampleFormControlTextarea1">Description Game</label>
      <textarea name="desc" class="form-control" id="exampleFormControlTextarea1" rows="3">
                <%=data.desc %>
            </textarea>
    </div>
    <button class="btn btn-primary btn-user btn-block" type="submit" class="btn btn-primary">Register</button>
  </form>
</div>